{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "lib": ["ES2017", "DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "typeRoots": ["./types", "./node_modules/@types"],
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "./src/stories"]
}
